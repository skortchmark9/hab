<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <link href='http://fonts.googleapis.com/css?family=Josefin+Sans:300,400' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="css/style.css"/>
    <script type="text/javascript" src="vendor/jquery-1.11.2.min.js"></script>
  </head>
  <body>
    <div id="creation">
      <input type="color" id="colorpicker" value="#ffffff" onChange="(currentColor = this.value)">
      <input type="button" id="Fill" class="buttons" value="Fill" onclick="fill(currentColor)">
      <input type="button" id="Erase" class="buttons" value="Erase" onclick="erase_all()">
      <input type="button" id="Save" class="buttons" value="Save" onclick="save()">
      <input id="name" type="text" name="name" placeholder="name">
      <input id="author" type="text" name="author" placeholder="author">
      <select name="pose" id="pose">
        <option value="1">Resting</option>
        <option value="2">Jumping</option>
        <option value="3">Walking Right 1</option>
        <option value="4">Walking Right 2</option>
        <option value="5">Walking Right 3</option>
        <option value="6">Walking Left 1</option>
        <option value="7">Walking Left 2</option>
        <option value="8">Walking Left 3</option>
        <option value="9">Custom 1</option>
        <option value="10">Custom 2</option>
      </select>
      <canvas id="creation_canvas" height="500px" width="500px"></canvas>
    </div>
    <div id="environment">
      <div id="info">
          <h1>Information</h1>
          <h2 id="i_x">user_x</h2>
          <h2 id="i_y">user_y</h2>
          <h2 id="i_movement">movement: Resting</h2>
      </div>
      <canvas id="environment_canvas" resize></canvas>    </div>
    </body>
<script type="text/javascript" src="js/platform.js"></script>
<script>
  hab.init([]);
  hab.start();
  var preloaded =<%-JSON.stringify(sprites)%>
</script>
<script type="text/javascript" src="js/array.js"></script>
<script type="text/javascript" src="js/main.js"></script>


